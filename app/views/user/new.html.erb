<div class="container">
<h1>New Account</h1>
<br>
<div class= "form">
<%= form_for :user, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
  <%= f.label :username, "User Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :username, class: "form-control input-lg" %>
        </div>
      </div>
<div class="form-group">
  <%= f.label :email, "E-mail:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control input-lg" %>
        </div>
      </div>
      <div class="form-group">
  <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control input-lg" %>
        </div>
      </div>
      <br>
      <div class="form-group text-center">
  <div class="btn"><%= f.submit "Register", class: "btn btn-primary btn-lg" %>
  </div>
  </div>
<% end %>
</div>

<h4 class="text-center">Have an account? <%= link_to "Login", "login" %> </h4>

</div>