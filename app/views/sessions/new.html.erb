<div class="container">
<h1 class="text-center">Welcome Back!</h1>
<div class= "form">
<%= form_for :user, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
  <%= f.label :email, "E-mail:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
    <%= f.email_field :email, class: "form-control input-lg"  %>
    </div>
</div>
<div class="form-group">
  <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control input-lg" %>
    </div>
</div>
<div class="form-group clearfix text-center">
  <div class="btn"><%= f.submit "Login", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
</div>
</div>

<h4 class="text-center">Need an account? <%= link_to "Sign up!", "createuser" %> </h4>
</div>